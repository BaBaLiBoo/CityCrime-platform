<template>
  <div class="login-container">
    <div class="login-brand">
      <div class="brand-logo-circle">
        <img src="/logo-shouhuzhe.svg" alt="守沪者 Logo" class="brand-logo-img" />
      </div>
      <div class="brand-text">
        <div class="brand-title">守沪者</div>
        <div class="brand-subtitle">基于公众参与的城市治安协同治理系统</div>
      </div>
    </div>
    <el-card class="login-card">
      <h2 class="title">账号登录</h2>
      <el-tabs v-model="activeTab" @tab-change="handleTabChange">
        <el-tab-pane label="用户登录" name="user">
          <el-form :model="form" @keyup.enter="onLogin">
            <el-form-item label="用户名">
              <el-input v-model="form.username" autocomplete="username" />
            </el-form-item>
            <el-form-item label="密码">
              <el-input v-model="form.password" type="password" autocomplete="current-password" />
            </el-form-item>
            <el-form-item>
              <el-button type="primary" :loading="loading" @click="onLogin">登录</el-button>
            </el-form-item>
          </el-form>
          <div class="footer">
            <span>没有账号？</span>
            <el-link type="primary" @click="goRegister">去注册</el-link>
          </div>
        </el-tab-pane>
        <el-tab-pane label="管理员登录" name="admin">
          <el-form :model="form" @keyup.enter="onLogin">
            <el-form-item label="用户名">
              <el-input v-model="form.username" autocomplete="username" />
            </el-form-item>
            <el-form-item label="密码">
              <el-input v-model="form.password" type="password" autocomplete="current-password" />
            </el-form-item>
            <el-form-item>
              <el-button type="primary" :loading="loading" @click="onLogin">登录</el-button>
            </el-form-item>
          </el-form>
        </el-tab-pane>
      </el-tabs>
    </el-card>
  </div>
</template>

<script setup>
import { ref } from 'vue';
import apiClient from '@/api/index.js';
import { useRouter } from 'vue-router';
import { ElMessage } from 'element-plus';

const router = useRouter();
const form = ref({ username: '', password: '' });
const loading = ref(false);
const activeTab = ref('user');

const handleTabChange = (tabName) => {
  form.value = { username: '', password: '' };
};

const onLogin = async () => {
  loading.value = true;
  try {
    const res = await apiClient.post('/auth/login', form.value);
    const token = res.data?.token;
    let userType = res.data?.userType;
    
    // 调试信息
    console.log('Login response:', res.data);
    console.log('UserType from server:', userType);
    console.log('UserType type:', typeof userType);
    console.log('Active tab:', activeTab.value);
    
    if (token) {
      // 确保userType是字符串类型
      if (userType == null) {
        userType = '普通用户';
      }
      userType = String(userType).trim();
      
      // 验证用户类型是否与选择的登录方式匹配
      if (activeTab.value === 'admin' && userType !== '管理员') {
        console.log('Admin login failed - UserType:', userType, 'Expected: 管理员');
        ElMessage.error('该账号不是管理员，请使用用户登录');
        loading.value = false;
        return;
      }
      if (activeTab.value === 'user' && userType === '管理员') {
        console.log('User login failed - UserType is 管理员');
        ElMessage.error('管理员账号请使用管理员登录');
        loading.value = false;
        return;
      }
      
      localStorage.setItem('auth_token', token);
      localStorage.setItem('user_type', userType || '普通用户');
      localStorage.setItem('user_info', JSON.stringify(res.data));
      
      ElMessage.success('登录成功');
      
      // 强制刷新页面以确保App.vue正确加载布局
      if (userType === '管理员') {
        window.location.href = '/dashboard';
      } else {
        window.location.href = '/user/home';
      }
    } else {
      throw new Error('未收到token');
    }
  } catch (e) {
    ElMessage.error('登录失败，请检查用户名或密码');
  } finally {
    loading.value = false;
  }
};

const goRegister = () => {
  router.push('/register');
};
</script>

