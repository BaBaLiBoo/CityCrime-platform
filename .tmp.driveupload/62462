package com.example.crimeplatformapi.entity;

import jakarta.persistence.*;
import lombok.Getter;
import lombok.Setter;
import java.time.LocalDateTime;
@Getter
@Setter
@Entity
@Table(name = "user_accounts")
public class UserAccounts {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "user_id")
    private Integer userId;

    @Column(name = "username", nullable = false, unique = true, length = 50)
    private String username;

    @Column(name = "password_hash", nullable = false)
    private String passwordHash;

    @Column(name = "is_active")
    private boolean isActive = true;

    @Column(name = "created_at", updatable = false)
    private LocalDateTime createdAt;

    @Column(name = "user_type", nullable = false, columnDefinition = "ENUM('普通用户', '管理员') DEFAULT '普通用户'")
    private String userType; // 用户类型：普通用户、管理员

    @Column(name = "id_number", length = 18)
    private String idNumber; // 身份证号（用于实名认证）

    @Column(name = "real_name", length = 50)
    private String realName; // 真实姓名（用于实名认证）

    // --- 关系映射 ---
    // 用户与 Officer 关系可选（平台用户不一定是警员）
    @OneToOne(fetch = FetchType.LAZY)
    @JoinColumn(name = "officer_id", referencedColumnName = "officer_id", nullable = true, unique = true)
    private Officers officer;

    // 角色功能已移除；如需恢复，请在此处恢复多对多映射
}